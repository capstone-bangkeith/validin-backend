  "scripts": {
    "build": "tsc",
    "test": "jest --silent",
    "dev": "nodemon ./src/index.ts",
    "start:node": "node ./dist/index.js",
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "start:daemon": "pm2 start ecosystem.config.json",
    "pm2": "pm2",
    "start:ts": "ts-node ./src/index.ts",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier -w .",
